<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tab_indicator_iv"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:adjustViewBounds="true"  />

    <TextView
        android:id="@+id/tab_unread_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tab_indicator_iv"
        android:layout_alignTop="@+id/tab_indicator_iv"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="-3dp"
        android:background="@drawable/godspeed_item_unread_red"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/white_color"
        android:textSize="10sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tab_indicator_tv"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@drawable/godspeed_tab_bar_text_selector"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_indicator_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        tools:text="课程" />
</RelativeLayout>